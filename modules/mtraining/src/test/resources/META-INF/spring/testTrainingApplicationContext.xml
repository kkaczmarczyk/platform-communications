<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference interface="org.motechproject.mtraining.service.CourseService"
                    id="courseService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.ModuleService"
                    id="moduleService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.ChapterService"
                    id="chapterService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.MessageService"
                    id="messageService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.BookmarkService"
                    id="bookmarkService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.QuizService"
                    id="quizService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.QuestionService"
                    id="questionService"/>

    <osgi:reference interface="org.motechproject.mtraining.service.CourseConfigurationService"
                    id="courseConfigurationService"/>


    <osgi:reference id="eventListenerRegistry"
                    interface="org.motechproject.event.listener.EventListenerRegistryService"/>

    <bean id="testEventHandler" class="org.motechproject.mtraining.osgi.TestModuleCreationEventListener"/>

</beans>
