<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd

       http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:/META-INF/motech/*.xml"/>

    <osgi:service interface="org.motechproject.mtraining.service.CourseService" auto-export="interfaces"
                  ref="courseService"/>

    <osgi:service interface="org.motechproject.mtraining.service.ModuleService" auto-export="interfaces"
                  ref="moduleService"/>

    <osgi:service interface="org.motechproject.mtraining.service.ChapterService" auto-export="interfaces"
                  ref="chapterService"/>

    <osgi:service interface="org.motechproject.mtraining.service.MessageService" auto-export="interfaces"
                  ref="messageService"/>

    <osgi:service interface="org.motechproject.mtraining.service.BookmarkService" auto-export="interfaces"
                  ref="bookmarkService"/>

    <osgi:service interface="org.motechproject.mtraining.service.QuizService" auto-export="interfaces"
                  ref="quizService"/>

    <osgi:service interface="org.motechproject.mtraining.service.QuestionService" auto-export="interfaces"
                  ref="questionService"/>

    <osgi:service interface="org.motechproject.mtraining.service.CourseConfigurationService" auto-export="interfaces"
                  ref="courseConfigurationService"/>

    <osgi:service interface="org.motechproject.mtraining.service.CourseProgressService" auto-export="interfaces"
                  ref="courseProgressService"/>

    <osgi:reference id="eventRelay" interface="org.motechproject.event.listener.EventRelay"/>

    <osgi:reference id="couchDbManager" interface="org.motechproject.commons.couchdb.service.CouchDbManager"/>

</beans>
